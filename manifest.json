{
  "manifest_version": 3,
  "name": "AnyPush - 跨设备推送助手",
  "version": "1.1.0",
  "description": "快速推送选中文本和链接到其他设备，支持企业微信、Bark等多种推送服务",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "https://qyapi.weixin.qq.com/*",
    "https://api.day.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AnyPush",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}